<div class="row">
  <header class="row navbar navbar-inverse">
      <nav>
        <div class="container-fluid">
          <% if user_signed_in? %>
            <ul class="nav navbar-nav navbar-navigation navbar-username">
              <li><%= current_user.first_name %></li>
            </ul>
          <% end %>
          <ul class="nav navbar-nav navbar-right navbar-navigation">
            <% if user_signed_in? %>
              <li><%= link_to('Edit registration', edit_user_registration_path) %></li>
              <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
            <% else %>
              <li><%= link_to('Register', new_user_registration_path)  %></li>
              <li><%= link_to('Login', new_user_session_path) %></li>
            <% end %>
          </ul>
        </div>
      </nav>
  </header>
</div>
