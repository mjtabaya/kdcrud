<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <%- flash.each do |name, msg| -%>
    <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
  <%- end -%>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first-name" %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autocomplete: "last-name" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.text_field :phone, autocomplete: "phone" %>
  </div>

  <div class="field">
    <%= f.label :card %><br />
    <%= f.text_field :card %>
  </div>

  <br />

  <div class="field">
    <%= f.label :password %>
    <em>(<%= @minimum_password_length %> - <%= @maximum_password_length %> characters )</em><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  <br />
  <div class="field">
    <%= f.label :role %><br />
    <%= f.select :role, options_for_select(User.role_options) %>
  </div>

  <br />

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
